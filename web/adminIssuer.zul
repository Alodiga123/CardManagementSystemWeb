<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="/WEB-INF/tld/core.dsp.tld" prefix="c" ?>
<?page title="${c:l('sp.crud.profile.admin')}"?>
<?link rel="icon" tye="image/x-icon" href="/images/favicon.ico"?>

<zk xmlns:n="native">
    <window id="winAdminIssuer" width="100%" height="100%" apply="com.alodiga.cms.web.controllers.AdminIssuerController" class="general-window">
        <style src="/css/general.css"/>
        <borderlayout width="100%" height="100%" class="content-transparent">
            <north border="none" size="52px" class="content-transparent">
                <include src="adminHeader.zul"/>
            </north>
            <center border="none" flex="true" class="content-transparent" autoscroll="true">
                <div align="center" >
                    <hlayout >
                        <div width="1200px" align="left" height="780px">
                            <hlayout>
                                <div>
                                    <include src="adminMainMenu.zul"/>
                                </div>
                                <div width="900px">
                                    <vlayout>
                                        <div height="20px" width="100%" align="left">
                                            <!--Bread crumb-->
                                            <hlayout>
                                                <toolbarbutton label="${c:l('sp.bread.crumb.home')}" onClick='Executions.sendRedirect(&quot;home-admin.zul&quot;)'/>
                                                 |
                                                <toolbarbutton label="${c:l('cms.crud.issuer.card')}" onClick='Executions.sendRedirect(&quot;listIssuer.zul&quot;)'/>
                                                 |
                                                <toolbarbutton id= "tbbTitle" label="${c:l('cms.crud.issuer.add')}"/>
                                            </hlayout>
                                        </div>
                                        <div height="5px" width="100%" style="background:#333;" align="left"></div>
                                        <div>
                                            <vlayout>
                                                <div align="right">
                                                    <hlayout>
                                                        <label value="${c:l('sp.common.field.required1')}" sclass="lblexample" />
                                                        <separator/>
                                                        <label value="*" sclass="lblreq" />
                                                        <separator/>
                                                        <label value="${c:l('sp.common.field.required2')}" sclass="lblexample" />
                                                    </hlayout>
                                                </div>
                                                <label value="${c:l('sp.common.data.basic')}" sclass="lblbold"/>
                                                <grid fixedLayout="true">
                                                    <columns>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                    </columns>
                                                    <rows>
                                                        <row>
                                                            <label value="${c:l('cms.common.country')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.identification.type')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.document.identification')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <combobox id="cmbCountry" width="270px" mold="rounded" readonly="true" />
                                                            <combobox id="cmbPersonType" width="270px" mold="rounded" readonly="true" />
                                                            <combobox id="cmbDocumentsPersonType" width="270px" mold="rounded" readonly="true" />
                                                       </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.identification.number')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.issuer.name')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.issuer.type')}" sclass="lblbold"/>
                                                       </row>
                                                        <row>
                                                            <textbox id="txtIdentificationNumber" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <textbox id="txtName" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <combobox id="cmbIssuerType" width="270px" mold="rounded" readonly="true" />
                                                       </row>
                                                         <row>
                                                            <label value="${c:l('cms.common.issuer.email')}" sclass="lblbold"/> 
                                                            <label value="${c:l('cms.common.bin.number')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.swift.code')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtIssuerEmail" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <textbox id="txtBinNumber" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/> 
                                                            <textbox id="txtSwiftCode" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>                                                            
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.aba.code')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.contract.number')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.status.active')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtAbaCode" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <textbox id="txtContractNumber" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <hbox>
                                                            <radiogroup id="IssuerActive" onCheck="value = self.selectedItem.label"/>
                                                                 <grid>
                                                                    <rows>
                                                                        <row>
                                                                            <radio id="rActiveYes" label="${c:l('cms.commom.Yes')}" radiogroup="IssuerActive" />
                                                                            <radio id="rActiveNo" label="${c:l('cms.commom.No')} " radiogroup="IssuerActive" />
                                                                        </row>
                                                                    </rows>
                                                                 </grid>
                                                            </hbox>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.web.site')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.fax.number')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.person.contact.name')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtWebSite" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                            <textbox id="txtFaxNumber" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/> 
                                                            <textbox id="txtPersonContactName" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>                                                            
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.contact.email')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtEmailPersonContact" width="270px" constraint="no empty: ${c:l('error.field.required')}" maxlength="60" onChange="self.setValue(self.getValue().toUpperCase().trim());"/>
                                                        </row>
                                                    </rows>
                                                </grid>
                                            </vlayout>
                                        </div>
                                        <div id="divInfo" height="20px" width="100%" style="background:#B6E59E;" align="left" visible="false"/>
                                        <!--Buttons-->
                                        <div align="right">
                                            <button  id="btnSave" width="150px" label="${c:l('sp.common.actions.save')}" class="open orange"/>
                                            <button  id="btnBack" width="150px" label="${c:l('sp.common.actions.back')}" class="open gray" onClick="Executions.sendRedirect(&quot;listIssuer.zul&quot;)"/>
                                        </div>
                                    </vlayout>
                                </div>
                            </hlayout>
                        </div>
                    </hlayout>
                </div>
            </center>
        </borderlayout>
    </window>
</zk>