<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="/WEB-INF/tld/core.dsp.tld" prefix="c" ?>
<?page title="${c:l('sp.crud.profile.admin')}"?>
<?link rel="icon" tye="image/x-icon" href="/images/favicon.ico"?>

<zk xmlns:n="native">
    <window id="winAdminCardComplementaries" width="950px" height="590px" apply="com.alodiga.cms.web.controllers.AdminCardComplementariesController" >
        <style src="/css/general.css"/>
        <borderlayout width="100%" height="100%" class="content-transparent">
            <center border="none" flex="true" class="content-transparent" autoscroll="true">
                <div align="center" >
                    <hlayout >
                        <div></div>
                        <div width="1200px" align="left" height="780px">
                            <hlayout>
                                <div width="900px">
                                    <vlayout>
                                        <div height="5px" width="100%" style="background:#333;" align="left"></div>
                                        <div>
                                            <vlayout>
                                                <label value="${c:l('sp.common.data.basic')}" sclass="lblbold"/>
                                                <grid fixedLayout="true">
                                                    <columns>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                    </columns>
                                                    <rows>
                                                        <row>
                                                            <label value="${c:l('sp.common.country')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.identificationsTypes')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.crud.identificationNumber')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <combobox id="cmbCountry" width="250px" mold="rounded" readonly="true" />
                                                            <combobox id="cmbDocumentsPersonType" width="250px" mold="rounded" readonly="true" />
                                                            <textbox id="txtIdentificationNumber" value="" width="250px" maxlength="40"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.expirationDate')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.crud.identificationNumberOld')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.fullName')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <datebox id="txtDueDateDocumentIdentification" width="250px"/>
                                                            <textbox id="txtIdentificationNumberOld" value="" width="250px" maxlength="40"/>
                                                            <textbox id="txtFullName" value="" width="250px" maxlength="40"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.fullLastName')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.birthPlace')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.birthday')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtFullLastName" value="" width="250px" maxlength="40"/>
                                                            <textbox id="txtBirthPlace" value="" width="250px" maxlength="45"/>
                                                            <datebox id="txtBirthDay" width="250px"/>
                                                        </row>
                                                        <row> 
                                                            <label value="${c:l('cms.common.gender')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.civilState')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.naturalperson.profession')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <hbox>
                                                                <radiogroup id="gender" onCheck="choice1.value = self.selectedItem.label" />
                                                                <grid>
                                                                    <rows>
                                                                        <row>
                                                                            <radio id="genderFemale" label="${c:l('cms.gender.female')}" radiogroup="gender" />
                                                                            <radio id="genderMale" label="${c:l('cms.gender.male')}" radiogroup="gender" />
                                                                        </row>
                                                                    </rows>
                                                                </grid>
                                                            </hbox>  
                                                            <hlayout>
                                                                <combobox id="cmbCivilState" width="250px" mold="rounded" readonly="true" />
                                                             </hlayout>
                                                             <hlayout>
                                                                <combobox id="cmbProfession" width="250px" mold="rounded" readonly="true" />
                                                             </hlayout>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.naturalperson.cardComplementaries.relationship')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.naturalperson.familyReferences.localPhone')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.naturalperson.familyReferences.cellPhone')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <combobox id="cmbRelationship" width="250px" mold="rounded" readonly="true" />
                                                            <textbox id="txtLocalPhone" value="" width="250px" maxlength="30"/>
                                                            <textbox id="txtCellPhone" value="" width="250px" maxlength="30"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.email')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <textbox id="txtEmail" value="" width="250px" maxlength="60" constraint="/.+@.+\.[a-z]+/: ${c:l('cms.error.field.emailInvalidate')}"/>
                                                        </row>
                                                    </rows>
                                                </grid>
                                            </vlayout>
                                        </div>
                                        <div id="divInfo" height="20px" width="100%" style="background:#B6E59E;" align="left" visible="false"/>
                                        <!--Buttons-->
                                        <div align="right">
                                            <button  id="btnSave" width="150px" label="${c:l('sp.common.actions.save')}" class="open orange" />
                                        </div>
                                    </vlayout>
                                </div>
                                <div></div>
                            </hlayout>
                        </div>
                        <div></div>
                    </hlayout>
                </div>
            </center>
        </borderlayout>
    </window>
</zk>