<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="/WEB-INF/tld/core.dsp.tld" prefix="c" ?>
<?page title="${c:l('sp.crud.profile.admin')}"?>
<?link rel="icon" tye="image/x-icon" href="/images/favicon.ico"?>

<zk xmlns:n="native">
    <window id="winAdminRequestCardCanceled" width="100%" height="100%" apply="com.alodiga.cms.web.controllers.AdminRequestCardCanceledControllers" class="general-window">
        <style src="/css/general.css"/>
        <borderlayout width="100%" height="100%" class="content-transparent">
            <center border="none" flex="true" class="content-transparent" autoscroll="true">
                <div align="center" >
                    <hlayout >
                        <div></div>
                        <div width="1200px" align="left" height="780px">
                            <hlayout>
                                <div width="900px">
                                    <vlayout>
                                        <div height="5px" width="100%" style="background:#333;" align="left"></div>
                                        <div>
                                            <vlayout>
                                                <div align="right">
                                                    <hlayout>
                                                        <label value="${c:l('sp.common.field.required1')}" sclass="lblexample" />
                                                        <separator/>
                                                        <label value="*" sclass="lblreq" />
                                                        <separator/>
                                                        <label value="${c:l('sp.common.field.required2')}" sclass="lblexample" />
                                                    </hlayout>
                                                </div>
                                                <label value="${c:l('sp.common.data.renewal')}" sclass="lblbold"/>
                                                <grid fixedLayout="true">
                                                    <columns>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                        <column label="" width="290px"/>
                                                    </columns>
                                                    <rows>
                                                        <row>
                                                            <label value="${c:l('cms.common.cardNumber')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.program')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.product.type')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <label id="lblCardNumber" value="" width="230px" style="color:#837E76;"/>
                                                            <label id="lblProgram" value="" width="230px" style="color:#837E76;"/>
                                                            <label id="lblProduct" value="" width="230px" style="color:#837E76;"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.DateOfIssue')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.statusCard')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <label id="lblDate" value="" width="230px" style="color:#837E76;"/>
                                                            <label id="lblStatus" value="" width="230px" style="color:#837E76;"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.menu.cardIssuanceRequest.identificationCardHolder')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.menu.cardIssuanceRequest.fistLastNameCardHolder')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.common.user.email')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <label id="lblIdentificationCardHolder" value="" width="230px" style="color:#837E76;"/>
                                                            <label id="lblNamesCardHolder" value="" width="230px" style="color:#837E76;"/>
                                                            <label id="lblEmail" value="" width="230px" style="color:#837E76;"/>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.common.phoneNumber')}" sclass="lblbold"/>
                                                            <label value="${c:l('cms.crud.indActivation')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <label id="lblPhone" value="" width="230px" style="color:#837E76;"/>
                                                            <hbox>
                                                                <radiogroup id="indCanceled" onCheck="value = self.selectedItem.label"/>
                                                                <grid>
                                                                    <rows>
                                                                        <row>
                                                                            <radio id="rCanceledYes" label="${c:l('cms.commom.Yes')}" radiogroup="indCanceled" />
                                                                            <radio id="rCanceledNo" label="${c:l('cms.commom.No')} " radiogroup="indCanceled" />
                                                                        </row>
                                                                    </rows>
                                                                </grid>
                                                            </hbox>
                                                        </row>
                                                        <row>
                                                            <label value="${c:l('cms.crud.activationProduct.observations')}" sclass="lblbold"/>
                                                        </row>
                                                        <row>
                                                            <cell colspan="3">
                                                                <hlayout>
                                                                    <textbox id="txtObservations" multiline="true" rows="3" width="850px" maxlength="1470"/>
                                                                    <label value="*" sclass="lblreq" />
                                                                </hlayout>   
                                                            </cell>
                                                        </row> 
                                                    </rows>
                                                </grid>
                                            </vlayout>
                                        </div>
                                        <div id="divInfo" height="20px" width="100%" style="background:#B6E59E;" align="left" visible="false"/>
                                        <!--Buttons-->
                                        <div align="right">
                                            <button  id="btnActivate" width="150px" label="${c:l('cms.common.actions.activate')}" class="open orange"/>
                                            <button  id="btnBack" width="150px" label="${c:l('sp.common.actions.back')}" class="open gray" onClick="Executions.sendRedirect(&quot;listCardRenewalByCanceled.zul&quot;)"/>
                                        </div>
                                    </vlayout>
                                </div>
                                <div></div>
                            </hlayout>
                        </div>
                        <div></div>
                    </hlayout>
                </div>
            </center>
        </borderlayout>
    </window>
</zk>